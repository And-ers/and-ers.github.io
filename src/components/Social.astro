---
const { platform, username } = Astro.props;
const imsrc = `../assets/${platform}.png`
var img = document.getElementById("social-img")
img.setAttribute("src", imsrc)
---
<a href={`https://www.${platform}.com/${username}`}>
    <img id="social-img" width="40" height="40">
</a>

<style>
    a {
      padding: 0.5rem 1rem;
      color: white;
      background-color: #340c7071;
      text-decoration: none;
    }
</style>