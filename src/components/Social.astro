---
import { Image } from 'astro:assets';
const { platform, username } = Astro.props;
const imsrc = `../assets/${platform}.png`
---
<a href={`https://www.${platform}.com/${username}`}>
    <Image src=`../assets/github.png` alt=`My ${platform}` width="40" height="40">
</a>

<style>
    a {
      padding: 0.5rem 1rem;
      color: white;
      background-color: #340c7071;
      text-decoration: none;
    }
</style>