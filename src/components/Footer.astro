---
import { Image } from 'astro:assets';
import github_img from '../src/assets/github.png';
---

<footer>
    <a href="http://www.github.com/And-ers"><Image src={github_img} alt="My GitHub" width="40" height="40"/></a>
    <a href="http://www.linkedin.com/in/anders-cornect-b44166301"><Image src={github_img} alt="My GitHub" width="40" height="40"/></a>
</footer>

<style>
    footer {
      background-color: #04392780;
      display: flex;
      gap: 1rem;
      margin-top: 2rem;
      margin: auto 0;
      position: absolute;
      bottom: 0;
      left: 0;
      width: 100%;
      color: white;
      backdrop-filter: blur(20px);
    }
    
    a {
      padding: 0.5rem 1rem;
      color: white;
      background-color: #340c7071;
      text-decoration: none;
    }
</style>